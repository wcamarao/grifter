<%= form_for(@item) do |f| %>
  <% if @item.errors.any? %>
    <ul id="errors">
      <% @item.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <div class="row">
    <div class="large-6 columns">
      <%= f.text_field :name, :placeholder => 'Name' %>

      <%= f.file_field :picture, :capture => 'camera', :accept => 'image/*' %>

      <input id="item_picture_placeholder" placeholder="<%=@picture_placeholder%>"
             type="text" readonly="readonly" value="">

      <%= f.text_field :value, :placeholder => 'Value (USD)' %>
      <%= f.text_area :description, :placeholder => 'Description...' %>

      <%= f.submit @submit_label, :id => 'item_submit' %>
    </div>

    <div class="large-6 columns">
      <img id="item_picture_preview" src="<%= @item.picture_640 %>">
    </div>
  </div>

<% end %>
